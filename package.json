{
  "name": "postgres-to-mysql-migration",
  "version": "1.0.0",
  "description": "Migration script to transfer data from PostgreSQL to MySQL",
  "main": "dist/src/migrate.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "migrate": "npm run build && node dist/src/migrate.js",
    "migrate:dev": "ts-node src/migrate.ts",
    "validate": "npm run build && node dist/src/validate.js",
    "validate:dev": "ts-node src/validate.ts",
    "report": "ts-node -r dotenv/config src/generate-report.ts",
    "report:dev": "ts-node src/generate-report.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "postgresql",
    "mysql",
    "migration",
    "database",
    "typescript"
  ]
}
